# while syntax: ~while|<context>, { !<condition> }, { <code> }
~:while -> {
    ~:ctx -> $0, cond_bl -> $1, exec_bl -> $2

    ~:loop -> {
        ~cond_bl(~ctx)()?~ {
            ~exec_bl(~ctx)()

            ~loop~()
        }
    }

    ~loop(~ + :loop -> ~loop)()
}:[]

~while|~:[cur_n -> 3], { !~cur_n <= 91 }, {
    ~:fibnums -> |0, 1, 1
    ~:n -> ~cur_n + 1

    ~while|~, { !~n > 2 }, {
        ~:n -> ~n - 1 

        ~fibnums|0, ~fibnums 1
        ~fibnums|1, ~fibnums 2
        ~fibnums|2, ~fibnums 0 + (~fibnums 1)
    }

    ~print(~fibnums 2)
    ~:cur_n -> ~cur_n + 1 
}

