~:putch = %load rbbputch
%load char~();;

~:puts = ~fn~ str {
  ~use_assert~puts
  ~assert|(~str has_iface|string), expecting_string, str, :got = ~str

  ~foreach~ (~str) ch {
    ~putch (~ch)
  }
}

~:putsln = ~fn~ str {
  ~puts (~str)
  ~putch '\n'
}

~:print = ~fn~ obj {
  ~obj == ln if_true ~.{
    ~putch '\n'
  } ~.{
    ~puts (~obj_to_string (~obj))
  }

  !~print
}

